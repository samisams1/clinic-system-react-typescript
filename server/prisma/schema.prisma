datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}
/// A user
model User {
  id              Int    @id @default(autoincrement())
  firstName       String
  lastName        String
  phoneNumber     String
  email           String
  password        String
  role    Role?       @relation(fields: [roleId], references: [id])
  roleId Int?
   checkup     CheckUp[]
   appointment     Appointment[]

}

model Role {
    id              Int    @id @default(autoincrement())
    name            String
    user User[]


}
model Patient {
  id              Int    @id @default(autoincrement())
  firstName        String
  lastName         String
  dateOfBirth      String
  martialStatus    String
  phoneNumber      String
  email            String
  address          String
  country          String
  appointment     Appointment[]
  patientVitals PatientVitals[]
  checkUp CheckUp[]

}
model CheckUp {
  id Int @id @default(autoincrement())
  patient    Patient?        @relation(fields: [patientId], references: [id])
  patientId Int?
  symptoms String
  diagosis String
  checkUpDate String
  nextvist String 
  doctor    User?        @relation(fields: [doctorId], references: [id])
  doctorId  Int?
}
model Appointment {
  id Int @id @default(autoincrement())
  patient    Patient?        @relation(fields: [patientId], references: [id])
  patientId Int?
  symptoms String
  diagosis String
  checkUpDate String
  nextvist String
  doctor    User?        @relation(fields: [doctorId], references: [id])
  doctorId  Int?
}
model PatientVitals  {
 id Int @id @default(autoincrement())
 patient    Patient?        @relation(fields: [patientId], references: [id])
 patientId Int?
 temperature String?
 bpSystolic String?
 bpDiastolic String?
 notes String?

}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

/// A user
model User {
  id              Int    @id @default(autoincrement())
  firstName       String
  lastName        String
  phoneNumber     String
  role            String
  email           String
  password        String
 // role        Role @relation(fields: [roleId], references: [id])
}

model Role {
    id              Int    @id @default(autoincrement())
    name            String
  //  user User[]
    roleId Int


}
model Patient {
  id              Int    @id @default(autoincrement())
  firstName        String
  lastName         String
  dateOfBirth      String
  martialStatus    String
  phoneNumber      String
  email            String
  address          String
  country          String
}
